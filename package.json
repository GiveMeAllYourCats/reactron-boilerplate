{
  "name": "reactron-boilerplate",
  "description": "desc",
  "version": "0.0.1",
  "main": "public/electron.js",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "app-root-path": "^3.0.0",
    "custom-electron-titlebar": "^3.2.1",
    "electron-is-dev": "^1.1.0",
    "electron-util": "^0.13.1",
    "electron-window-state": "^5.0.3",
    "glob": "^7.1.6",
    "knex": "^0.20.8",
    "mysql": "^2.17.1",
    "mysql2": "^2.1.0",
    "objection": "^2.1.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "sqlite3": "^4.1.1"
  },
  "engines": {
    "node": ">=13.0.0"
  },
  "author": {
    "name": "GiveMeAllYourCats",
    "email": "specamps@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michaeldegroot/reactron-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/michaeldegroot/reactron-boilerplate/issues",
    "email": "specamps@gmail.com"
  },
  "keywords": [
    "boilerplate",
    "react",
    "electron"
  ],
  "license": "MIT",
  "watch": {
    "electron-dev": {
      "patterns": [
        "main-process",
        "model",
        "public",
        "*.js",
        "package.json"
      ],
      "ignore": "src",
      "extensions": "*",
      "inherit": true,
      "quiet": false,
      "legacyWatch": true,
      "delay": 10
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "migrate:latest": "npx knex migrate:latest",
    "migrate:rollback": "npx knex migrate:rollback",
    "electron": "electron .",
    "electron-dev": "electron . --inspect",
    "watch-dev": "npm-watch electron-dev",
    "dev": "concurrently --kill-others \"npm run watch-dev\" \"npm run start\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "build": {
    "appId": "electron.boilerplate",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "electron.boilerplate"
    }
  },
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "directory-tree": "^2.2.4",
    "concurrently": "^5.0.2",
    "electron": "^7.1.9",
    "electron-builder": "^22.2.0",
    "npm-watch": "^0.6.0"
  }
}
